  <p class="mb-4 p-3 rounded 
            <%= type == "alert" ? "bg-red-100 text-red-700" : "bg-green-100 text-green-700" %>">
    <%= message %>
  </p>
<% end %>

<div class="form-page">
  <h1>New User</h1>
  <%= render "form", user: @user %>
</div>