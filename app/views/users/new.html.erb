<div id="signup">
  <div class="signup-card">
    <h1>Create your account</h1>

    <%= form_with model: @user, url: signup_path, local: true, class: "signup-form" do |f| %>

      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :phone_number %>
        <%= f.text_field :phone_number %>
      </div>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
      </div>

      <%= f.submit "Sign Up", class: "btn-primary" %>
    <% end %>
  </div>
</div>