<h1 class="text-2xl font-bold mb-4">Create your account</h1>

<%= form_with model: @user, url: signup_path, local: true, class: "space-y-4" do |f| %>
  <div>
    <%= f.label :name, class: "block font-medium" %>
    <%= f.text_field :name, class: "input" %>
  </div>

  <div>
    <%= f.label :email, class: "block font-medium" %>
    <%= f.email_field :email, class: "input" %>
  </div>

  <div>
    <%= f.label :password, class: "block font-medium" %>
    <%= f.password_field :password, class: "input" %>
  </div>

  <div>
    <%= f.label :password_confirmation, class: "block font-medium" %>
    <%= f.password_field :password_confirmation, class: "input" %>
  </div>

  <%= f.submit "Sign Up", class: "btn-primary" %>
<% end %>