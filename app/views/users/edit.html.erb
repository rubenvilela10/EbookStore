<div class="max-w-7xl mx-auto py-10">
  <%= form_with model: @user, url: user_path, method: :patch, local: true, class: "form-card" do |f| %>

      <div class="form-field">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-input", placeholder: @user.name %>
      </div>

      <div class="form-field">
          <%= f.label :phone_number, class: "form-label" %>
          <%= f.text_field :phone_number, class: "form-input", placeholder: @user.phone_number %>
      </div>

      <div class="form-field">
          <%= f.label :country, class: "form-label" %>
          <%= f.text_field :country, class: "form-input", placeholder: @user.country %>
      </div>

      <div class="form-field">
          <%= f.label :address, class: "form-label" %>
          <%= f.text_field :address, class: "form-input", placeholder: @user.address %>
      </div>

      <div class="form-field">
          <%= f.label :age, class: "form-label" %>
          <%= f.number_field :age, class: "form-input", placeholder: @user.age %>
      </div>

      <div class="form-field">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, class: "form-input", placeholder: "New password (optional)" %>
      </div>

      <div class="form-field">
          <%= f.label :password_confirmation, class: "form-label" %>
          <%= f.password_field :password_confirmation, class: "form-input", placeholder: "Confirm new password" %>
      </div>

      <div class="mt-6">
          <%= f.submit "Save", class: "form-submit" %>
      </div>

  <% end %>
</div>