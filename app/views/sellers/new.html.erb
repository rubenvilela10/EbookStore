<div class="max-w-7xl mx-auto py-10">
    <%= form_with url: seller_path, local: true, class: "form-card" do |f| %>

    <% if current_user %>
        <p class="text-gray-700 mb-6">
        You are currently logged in as <strong><%= current_user.email %></strong>.
        </p>

        <p class="text-gray-700 mb-3">
        By upgrading to a seller account, you will no longer be able to purchase ebooks as a buyer.
        </p>

        <p class="text-gray-700 mb-6">
        If you're sure you want to proceed, click the button below to activate your seller profile and start publishing your ebooks.
        </p>

    <% else %>

        <p class="text-gray-700 mb-6">
        You donâ€™t have an account yet. To become a seller, please fill in your information below.
        </p>

        <div class="form-field">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-input" %>
        </div>

        <div class="form-field">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-input" %>
        </div>

        <div class="form-field">
        <%= f.label :phone_number, class: "form-label" %>
        <%= f.text_field :phone_number, class: "form-input" %>
        </div>

        <div class="form-field">
        <%= f.label :age, class: "form-label" %>
        <%= f.number_field :age, class: "form-input" %>
        </div>

        <div class="form-field">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, class: "form-input" %>
        </div>

        <div class="form-field">
        <%= f.label :password_confirmation, class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-input" %>
        </div>

    <% end %>

    <div class="mt-6">
        <%= f.submit "Become a Seller", class: "form-submit" %>
    </div>

    <% end %>
</div>