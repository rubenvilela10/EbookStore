<h1 class="text-2xl font-bold mb-6">Login</h1>

<%= form_with url: login_path, local: true, class: "space-y-4 w-full max-w-sm" do %>

  <div>
    <label class="block font-medium mb-1">Email</label>
    <%= text_field_tag :email, nil, class: "w-full px-3 py-2 border rounded-lg" %>
  </div>

  <div>
    <label class="block font-medium mb-1">Password</label>
    <%= password_field_tag :password, nil, class: "w-full px-3 py-2 border rounded-lg" %>
  </div>

  <%= submit_tag "Login",
        class: "w-full bg-green-600 text-white py-2 rounded-lg hover:bg-green-700" %>

<% end %>

<p class="mt-4 text-sm">
  Don't have an account?
  <%= link_to "Sign up", signup_path, class: "text-green-600 font-semibold" %>
</p>