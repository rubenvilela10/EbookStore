<div class="min-h-screen bg-gray-50 text-gray-900">
    <p class="text-green-600 mb-4 mx-auto max-w-7xl"><%= notice %></p>


    <section class="relative h-[70vh] flex items-center justify-center text-center">
        <% if @landing_page.banner.attached? %>
            <div class="absolute inset-0 z-0">
            <%= image_tag @landing_page.banner, class: "w-full h-full object-cover opacity-70" %>
            </div>
        <% else %>
            <div class="absolute inset-0 z-0 bg-gradient-to-br from-blue-200 to-purple-300"></div>
        <% end %>

        <div class="relative z-10 max-w-7xl mx-auto px-6">
            <h1 class="text-5xl md:text-6xl font-extrabold text-white drop-shadow-lg">
            <%= @landing_page.title %>
            </h1>

            <% if @landing_page.subtitle.present? %>
            <p class="mt-4 text-2xl text-white font-light drop-shadow">
                <%= @landing_page.subtitle %>
            </p>
            <% end %>

            <% if @landing_page.description.present? %>
            <p class="mt-6 max-w-2xl mx-auto text-lg text-white/90 drop-shadow">
                <%= @landing_page.description %>
            </p>
            <% end %>

            <div class="mt-10">
            <a href="#sections" class="px-8 py-3 bg-white/90 hover:bg-white text-gray-900 rounded-xl text-lg font-semibold shadow-lg transition">
                Explore Sections
            </a>
            </div>
        </div>
    </section>
    <section id="sections" class="max-w-6xl mx-auto px-6 py-24 space-y-32">
        <% @landing_sections.sort_by(&:position).each do |s| %>
            <div class="grid md:grid-cols-2 gap-12 items-center p-10">
                <div>
                    <% if s.landing_image.attached? %>
                        <%= image_tag s.landing_image, class: "rounded-2xl shadow-lg h-72 object-cover"%>
                    <% else %>
                        <div class="w-full h-72 rounded-2xl bg-gradient-to-br from-blue-100 to-purple-200"></div>
                    <% end %>
                </div>
                <div class="space-y-6">
                    <h2 class="text-3xl font-bold text-gray-900"><%= s.title %></h2>

                    <% if s.subtitle.present? %>
                        <p class="text-lg text-gray-700"><%= s.subtitle %></p>
                    <% end %>

                    <% if s.content.present? %>
                        <p class="text-gray-600 leading-relaxed"><%= s.content %></p>
                    <% end %>

                    <% if s.link.present? %>
                        <a href="<%= s.link %>" class="inline-block text-blue-600 hover:text-blue-800 font-semibold underline">Learn more →</a>
                    <% end %>
                </div>
            </div>

        <% end %>
    </section>

    <footer class="py-12 text-center text-gray-500 text-sm">
        © <%= Time.current.year %> Your Store Name. All rights reserved.
    </footer>
</div>